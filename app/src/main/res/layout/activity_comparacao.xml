<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_in"
    android:orientation="vertical"
    tools:context=".ACTIVITIES.Comparacao">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6524646"
        android:backgroundTint="#0DAAD187"
        android:backgroundTintMode="src_over"
        android:gravity="center"
        android:text="MODELO" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="NOME"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:text="Modelo 1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloNome1"
            />

        <TextView

            android:layout_row="0"
            android:layout_column="2"
            android:text="Modelo 2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloNome2"
            />


        <TextView

            android:layout_row="1"
            android:layout_column="0"
            android:text="PreÃ§o"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:text="Preco 1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloPreco1"
            />

        <TextView

            android:layout_row="1"
            android:layout_column="2"
            android:text="Preco 2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloPreco2"
            />

        <TextView

            android:layout_row="2"
            android:layout_column="0"
            android:text="Memoria"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:text="Memoria 1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloMemoria1"
            />

        <TextView

            android:layout_row="2"
            android:layout_column="2"
            android:text="Memoria 2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloMemoria2"
            />

        <TextView

            android:layout_row="3"
            android:layout_column="0"
            android:text="Armazenamento"
            android:textStyle="bold"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            />

        <TextView
            android:layout_row="3"
            android:layout_column="1"
            android:text="Armazenamento 1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloArmazenamento1"
            />

        <TextView

            android:layout_row="3"
            android:layout_column="2"
            android:text="Armzenamento 2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:id="@+id/comparacaoTextModeloArmazenamento2"
            />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6524646"
        android:backgroundTint="#0DAAD187"
        android:backgroundTintMode="src_over"
        android:gravity="center"
        android:text="MARCA" />

</LinearLayout>